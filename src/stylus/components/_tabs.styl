@import '../bootstrap'
@import '../theme'

/* Theme */
tabs($material)
  .tabs__div
    color: $material.tabs.active

    &.tabs__item--disabled
      color: $material.buttons.disabled

  .tabs__bar
    background-color: $material.cards

    .icon--left,
    .icon--right
      color: $material.icons.inactive

theme(tabs, "tabs__bar")

.tabs__bar
  position: relative
  
  .icon--prepend,
  .icon--append
    position: absolute
    top: 0
    width: 32px
    align-items: center
    height: 100%
    cursor: pointer
    user-select: none

  .icon--prepend
    left: 4px

  .icon--append
    right: 4px
  
  // &--align-with-title,
  // &--overflow
  //   .tabs__wrapper
  //     overflow: hidden
  
  &--overflow
    .tabs__wrapper
      margin-left: 40px
      margin-right: 40px

  &--align-with-title
    .tabs__wrapper
      margin-left: 56px
      
      @media $display-breakpoints.xs-only
        margin-left: 66px

  &--fixed-tabs
    .tabs__div
      min-width: 160px

      @media $display-breakpoints.xs-only
        min-width: 72px

  &--centered:not(.tabs__bar--is-mobile)
    .tabs__container
      text-align: center
  
  // Assuming most use-cases won't break this
  // When left as display flex on mobile,
  // long text has issues with wrapping
  &--grow
    @media $display-breakpoints.sm-and-up
      .tabs__container
        display: flex

      .tabs__div
        flex: 1 0
        max-width: none
        
  &--icons-and-text
    .tabs__item
      flex-direction: column-reverse
      
      .icon
        margin-bottom: 6px

.tabs__container
  list-style-type: none
  transition: transform 0.6s cubic-bezier(0.86, 0, 0.07, 1)
  white-space: nowrap

.tabs__items
  overflow: hidden
  position: relative

.tabs__div
  align-items: center
  display: inline-flex
  flex: 0 1
  height: inherit
  max-width: 264px
  vertical-align: middle

.tabs__item
  align-items: center
  color: inherit
  display: flex
  flex: 1 1
  flex-basis: 264px
  font-size: 14px
  font-weight: 500
  height: 100%
  justify-content: center
  line-height: normal
  max-width: inherit
  padding: 6px 12px
  text-align: center
  text-decoration: none
  text-transform: uppercase
  transition: $primary-transition
  user-select: none
  white-space: normal
  word-break: break-all
  
  &:not(.tabs__item--active)
    opacity: .7

.tabs__slider
  bottom: 0
  height: 2px
  position: absolute
  transition: $primary-transition

.tabs__content
  width: 100%
  transition: transform 0.4s cubic-bezier(0.86, 0, 0.07, 1)
  
.tabs__wrapper
  overflow: hidden
